<tamination title="Walk and Dodge">

  <tam title="Walk and Dodge"
       from="Right-Hand Box"
       formation="Box RH"
       difficulty="1" sequencer="no">
    <path>
      <move select="Forward 4" />
    </path>
    <path>
      <move select="Dodge Right" beats="4" />
    </path>
  </tam>

