<!DOCTYPE tamination SYSTEM "../src/tamination.dtd">
<tamination title="Double Star Thru">

  <tam title="Ends Hourglass Circulate"
       formation="3 and 1 lines #1" group=" ">
    <path>
      <move select="Lead Left" beats="3" scaleX="2" scaleY="3"/>
    </path>
    <path>
    </path>
    <path>
    </path>
    <path>
      <move select="Extend Left" beats="3" scaleX="2" scaleY="2"/>
    </path>
  </tam>

  <tam title="Boys Chase Right, Girls Circulate" group=" ">
    <formation>
      <dancer gender="boy" x="-2" y="3" angle="180"/>
      <dancer gender="girl" x="-2" y="-1" angle="180"/>
      <dancer gender="boy" x="-2" y="1" angle="180"/>
      <dancer gender="girl" x="-2" y="-3" angle="180"/>
    </formation>
    <path>
      <move select="U-Turn Right" beats="1.5" offsetX="-1" />
      <move select="Forward 2" />
      <move select="Run Right" beats="2.5" offsetX="1" />
    </path>
    <path>
      <move select="Run Right" beats="6" hands="left"/>
    </path>
    <path>
      <move select="Run Right" beats="2.5" />
      <move select="Forward 4" beats="3.5" />
    </path>
    <path>
      <move select="Run Right" beats="6" hands="right" scaleX="3" scaleY="3"/>
    </path>
  </tam>
</tamination>