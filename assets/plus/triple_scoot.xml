<tamination title="Triple Scoot">




  <tam title="Triple Scoot"
       from="Right-Hand Columns"
       formation="Column RH GBGB">
    <path>
      <move select="Run Right" beats="6" />
    </path>
    <path>
      <move select="Extend Right" beats="1.5" scaleY=".5" />
      <move select="Swing Right" scaleX=".5" scaleY=".5" />
      <move select="Extend Left" beats="1.5" scaleY=".5" />
    </path>
    <path>
      <move select="Extend Right" beats="1.5" scaleY=".5" />
      <move select="Swing Right" scaleX=".5" scaleY=".5" />
      <move select="Extend Left" beats="1.5" scaleY=".5" />
    </path>
    <path>
      <move select="Extend Right" beats="1.5" scaleY=".5" />
      <move select="Swing Right" scaleX=".5" scaleY=".5" />
      <move select="Extend Left" beats="1.5" scaleY=".5" />
    </path>
  </tam>

  <tam title="Triple Scoot"
       from="Left-Hand Columns"
       formation="Column LH GBGB">
    <path>
      <move select="Extend Left" beats="1.5" scaleY=".5" />
      <move select="Swing Left" scaleX=".5" scaleY=".5" />
      <move select="Extend Right" beats="1.5" scaleY=".5" />
    </path>
    <path>
      <move select="Extend Left" beats="1.5" scaleY=".5" />
      <move select="Swing Left" scaleX=".5" scaleY=".5" />
      <move select="Extend Right" beats="1.5" scaleY=".5" />
    </path>
    <path>
      <move select="Extend Left" beats="1.5" scaleY=".5" />
      <move select="Swing Left" scaleX=".5" scaleY=".5" />
      <move select="Extend Right" beats="1.5" scaleY=".5" />
    </path>
    <path>
      <move select="Run Left" beats="6" />
    </path>
  </tam>

  <tam title="Double Scoot"
       from="Right-Hand Columns of 6">
    <formation>
      <dancer gender="girl" x="-2" y="-1" angle="180"/>
      <dancer gender="boy" x="0" y="-1" angle="180"/>
      <dancer gender="girl" x="2" y="-1" angle="180"/>
    </formation>
    <path>
      <move select="Run Right" beats="6" />
    </path>
    <path>
      <move select="Extend Right" beats="1.5" scaleY=".5" />
      <move select="Swing Right" scaleX=".5" scaleY=".5" />
      <move select="Extend Left" beats="1.5" scaleY=".5" />
    </path>
    <path>
      <move select="Extend Right" beats="1.5" scaleY=".5" />
      <move select="Swing Right" scaleX=".5" scaleY=".5" />
      <move select="Extend Left" beats="1.5" scaleY=".5" />
    </path>
  </tam>

  <tam title="Double Scoot"
       from="Left-Hand Columns of 6">
    <formation>
      <dancer gender="girl" x="-2" y="-1" angle="0"/>
      <dancer gender="boy" x="0" y="-1" angle="0"/>
      <dancer gender="girl" x="2" y="-1" angle="0"/>
    </formation>
    <path>
      <move select="Extend Left" beats="1.5" scaleY=".5" />
      <move select="Swing Left" scaleX=".5" scaleY=".5" />
      <move select="Extend Right" beats="1.5" scaleY=".5" />
    </path>
    <path>
      <move select="Extend Left" beats="1.5" scaleY=".5" />
      <move select="Swing Left" scaleX=".5" scaleY=".5" />
      <move select="Extend Right" beats="1.5" scaleY=".5" />
    </path>
    <path>
      <move select="Run Left" beats="6" />
    </path>
  </tam>

</tamination>
