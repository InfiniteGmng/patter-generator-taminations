<tamination title="Galaxy Formation">

  <tam title="Galaxy Circulate"
       from="Right-Hand Galaxy">
    <formation>
      <dancer gender="girl" x="-1" y="-1" angle="180"/>
      <dancer gender="boy" x="-3" y="0" angle="90"/>
      <dancer gender="girl" x="-1" y="1" angle="0"/>
      <dancer gender="boy" x="0" y="3.1" angle="0"/>
    </formation>
    <path numbers="3 6" couples="3 1">
      <move select="Lead Right" beats="3" scaleX="2" />
    </path>
    <path numbers="1 8" couples="4 2">
      <move select="Lead Right" beats="3" scaleY="2" />
    </path>
    <path numbers="2 7" couples="4 2">
      <move select="Extend Left" beats="3" scaleY="2.1" />
    </path>
    <path numbers="4 5" couples="1 3">
      <move select="Extend Right" beats="3" scaleY="2.1" />
    </path>
    <taminator>Turn on the Paths setting to see the circulate pattern.
    </taminator>
  </tam>

  <tam title="Galaxy Circulate"
       from="Left-Hand Galaxy"
       formation="Galaxy LH GP">
    <path>
      <move select="Extend Right" beats="3" scaleY="2.1" />
    </path>
    <path>
      <move select="Lead Left" beats="3" scaleY="2" />
    </path>
    <path>
      <move select="Lead Left" beats="3" scaleX="2" />
    </path>
    <path>
      <move select="Extend Left" beats="3" scaleY="2.1" />
    </path>
  </tam>

  <tam title="Galaxy Circulate"
       from="Facing Galaxy Right-Hand Box"
       formation="Galaxy Facing RH Box">
    <path>
      <move select="Forward"/>
      <move select="Lead Right" beats="2"/>
    </path>
    <path>
      <move select="Eighth Left" beats="1" offsetY="1"/>
      <move select="Eighth Left" beats="2" offsetX="1.41"/>
    </path>
    <path>
      <move select="Quarter Left" offsetY="1"/>
      <move select="Lead Right" beats="2" scaleX="1.1"/>
    </path>
    <path>
      <move select="Quarter Left" offsetY="1"/>
      <move select="Lead Right" beats="2" scaleX="1.1"/>
    </path>
  </tam>

  <tam title="Galaxy Circulate"
       from="Facing Galaxy Left-Hand Box"
       formation="Galaxy Facing LH Box">
    <path>
      <move select="Lead Right" beats="2"/>
      <move select="Quarter Left" offsetX="1.1"/>
    </path>
    <path>
      <move select="Lead Right" beats="2"/>
      <move select="Forward"/>
    </path>
    <path>
      <move select="Eighth Left" beats="2" offsetX="1" offsetY="1"/>
      <move select="Eighth Left" beats="1" offsetX="0.707" offsetY="-0.707"/>
    </path>
    <path>
      <move select="Lead Right" beats="2"/>
      <move select="Quarter Left" offsetX="1.1"/>
    </path>
  </tam>

  <tam title="Cut the Galaxy"
       from="Right-Hand Galaxy"
       formation="Galaxy RH GP">
    <path couples="3 1">
      <move select="Lead Right" beats="6" scaleX="2" />
    </path>
    <path couples="3 1">
      <move select="Dodge Right" />
      <move select="Swing Right" />
    </path>
    <path couples="4 2">
      <move select="Extend Left" beats="6" scaleY="2.1" />
    </path>
    <path couples="4 2">
      <move select="Dodge Right" />
      <move select="Swing Right" />
    </path>
  </tam>

  <tam title="Cut the Galaxy"
       from="Left-Hand Galaxy"
       formation="Galaxy LH GP">
    <path>
      <move select="Extend Right" beats="6" scaleY="2.1" />
    </path>
    <path>
      <move select="Dodge Left" />
      <move select="Swing Left" />
    </path>
    <path>
      <move select="Lead Left" beats="6" scaleX="2" />
    </path>
    <path>
      <move select="Dodge Left" />
      <move select="Swing Left" />
    </path>
  </tam>

  <tam title="Cut the Galaxy"
       from="Facing Galaxy, Right-Hand Centers"
       formation="Galaxy Facing RH Box">
    <path>
      <move select="Lead Right" beats="3" scaleX="2" />
    </path>
    <path>
      <move select="Dodge Left" />
      <move select="Swing Left" />
    </path>
    <path>
      <move select="Extend Left" beats="3" scaleY="2" />
    </path>
    <path>
      <move select="Dodge Left" />
      <move select="Swing Left" />
    </path>
  </tam>

  <tam title="Cut the Galaxy"
       from="Facing Galaxy, Left-Hand Centers"
       formation="Galaxy Facing LH Box">
    <path>
      <move select="Extend Right" beats="3" scaleY="2" />
    </path>
    <path>
      <move select="Dodge Right" />
      <move select="Swing Right" />
    </path>
    <path>
      <move select="Lead Left" beats="3" scaleX="2" />
    </path>
    <path>
      <move select="Dodge Right" />
      <move select="Swing Right" />
    </path>
  </tam>

  <tam title="Flip the Galaxy"
       from="Right-Hand Galaxy"
       formation="Galaxy RH GP">
    <path couples="3 1">
      <move select="Lead Right" beats="3" scaleX="2" />
    </path>
    <path couples="3 1">
      <move select="Run Right" />
    </path>
    <path couples="4 2">
      <move select="Extend Left" beats="3" scaleY="2" />
    </path>
    <path couples="4 2">
      <move select="Run Right" scaleY="1.05"/>
    </path>
  </tam>

  <tam title="Flip the Galaxy"
       from="Left-Hand Galaxy"
       formation="Galaxy LH GP">
    <path>
      <move select="Extend Right" beats="3" scaleY="2" />
    </path>
    <path>
      <move select="Run Left" />
    </path>
    <path>
      <move select="Lead Left" beats="3" scaleX="2" />
    </path>
    <path>
      <move select="Run Left" />
    </path>
  </tam>

  <tam title="Flip the Galaxy"
       from="Facing Galaxy, Right-Hand Centers"
       formation="Galaxy Facing RH Box">
    <path>
      <move select="Lead Right" beats="3" scaleX="2" />
    </path>
    <path>
      <move select="Flip Left" />
    </path>
    <path>
      <move select="Extend Left" beats="3" scaleY="2" />
    </path>
    <path>
      <move select="Flip Left" scaleY="1.05"/>
    </path>
  </tam>

  <tam title="Flip the Galaxy"
       from="Facing Galaxy, Left-Hand Centers"
       formation="Galaxy Facing LH Box">
    <path>
      <move select="Extend Right" beats="3" scaleY="2" />
    </path>
    <path>
      <move select="Flip Right" />
    </path>
    <path>
      <move select="Lead Left" beats="3" scaleX="2" />
    </path>
    <path>
      <move select="Flip Right" scaleY="1.05"/>
    </path>
  </tam>

</tamination>
