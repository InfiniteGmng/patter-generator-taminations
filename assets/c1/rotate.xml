<tamination title="Rotate">

  <tam title="Heads Rotate"
       from="Static Square"
       formation="Static Square" parts="2" group=" ">
    <path numbers="1 8">
      <move select="Lead Right" hands="right" beats="2" scaleY="2" />
      <move select="Lead Left" hands="right" beats="3" scaleX="2" scaleY="2" />
    </path>
    <path numbers="2 7">
      <move select="Quarter Right" hands="left" beats="2" />
      <move select="Lead Left" hands="left" beats="3" scaleX="3.5" scaleY="3" />
    </path>
    <path numbers="5 4">
      <move select="Forward 2" hands="right" />
    </path>
    <path numbers="3 6">
      <move select="Forward 2" hands="left" />
    </path>
  </tam>

  <tam title="Sides Rotate"
       from="Static Square"
       formation="Static Square" parts="2" group=" ">
    <path>
      <move select="Forward 2" hands="right" />
    </path>
    <path>
      <move select="Forward 2" hands="left" />
    </path>
    <path>
      <move select="Lead Right" hands="right" beats="2" scaleY="2" />
      <move select="Lead Left" hands="right" beats="3" scaleX="2" scaleY="2" />
    </path>
    <path>
      <move select="Quarter Right" hands="left" beats="2" />
      <move select="Lead Left" hands="left" beats="3" scaleX="3.5" scaleY="3" />
    </path>
  </tam>

  <tam title="Heads Rotate 1/2"
       from="Static Square"
       formation="Static Square" parts="2" group=" ">
    <path>
      <move select="Lead Right" hands="right" beats="2" scaleY="2" />
      <move select="Lead Left" hands="right" beats="3" scaleX="2" scaleY="2" />
      <move select="Lead Left" hands="right" beats="4" scaleX="2.5" scaleY="3" />
    </path>
    <path>
      <move select="Quarter Right" hands="left" beats="2" />
      <move select="Lead Left" hands="left" beats="3" scaleX="3.5" scaleY="3" />
      <move select="Lead Left" hands="left" beats="4" scaleX="3.5" scaleY="4.5" />
    </path>
    <path>
      <move select="Forward 2" hands="right" />
    </path>
    <path>
      <move select="Forward 2" hands="left" />
    </path>
  </tam>

  <tam title="Sides Rotate 1/2"
       from="Static Square"
       formation="Static Square" parts="2" group=" ">
    <path>
      <move select="Forward 2" hands="right" />
    </path>
    <path>
      <move select="Forward 2" hands="left" />
    </path>
    <path>
      <move select="Lead Right" hands="right" beats="2" scaleY="2" />
      <move select="Lead Left" hands="right" beats="3" scaleX="2" scaleY="2" />
      <move select="Lead Left" hands="right" beats="4" scaleX="2.5" scaleY="3" />
    </path>
    <path>
      <move select="Quarter Right" hands="left" beats="2" />
      <move select="Lead Left" hands="left" beats="3" scaleX="3.5" scaleY="3" />
      <move select="Lead Left" hands="left" beats="4" scaleX="3.5" scaleY="4.5" />
    </path>
  </tam>


  <tam title="Heads Reverse Rotate"
       from="Static Square"
       formation="Static Square"
       parts="2" group="  ">
    <path>
      <move select="Quarter Left" hands="right" beats="2" />
      <move select="Lead Right" hands="right" beats="3" scaleX="3.5" scaleY="3"/>
    </path>
    <path>
      <move select="Lead Left" hands="left" beats="2" scaleY="2" />
      <move select="Lead Right" hands="left" beats="3" scaleX="2" scaleY="2"/>
    </path>
    <path>
      <move select="Forward 2" hands="right" />
    </path>
    <path>
      <move select="Forward 2" hands="left" />
    </path>
  </tam>

  <tam title="Sides Reverse Rotate"
       from="Static Square"
       formation="Static Square"
       parts="2" group="  ">
    <path>
      <move select="Forward 2" hands="right" />
    </path>
    <path>
      <move select="Forward 2" hands="left" />
    </path>
    <path>
      <move select="Quarter Left" hands="right" beats="2" />
      <move select="Lead Right" hands="right" beats="3" scaleX="3.5" scaleY="3"/>
    </path>
    <path>
      <move select="Lead Left" hands="left" beats="2" scaleY="2" />
      <move select="Lead Right" hands="left" beats="3" scaleX="2" scaleY="2"/>
    </path>
  </tam>

  <tam title="Heads Reverse Rotate 1/2"
       from="Static Square"
       formation="Static Square"
       parts="2" group="  ">
    <path>
      <move select="Quarter Left" hands="right" beats="2" />
      <move select="Lead Right" hands="right" beats="3" scaleX="3.5" scaleY="3"/>
      <move select="Lead Right" hands="right" beats="4" scaleX="3.5" scaleY="4.5" />
    </path>
    <path>
      <move select="Lead Left" hands="left" beats="2" scaleY="2" />
      <move select="Lead Right" hands="left" beats="3" scaleX="2" scaleY="2"/>
      <move select="Lead Right" hands="left" beats="4" scaleX="2.5" scaleY="3" />
    </path>
    <path>
      <move select="Forward 2" hands="right" />
    </path>
    <path>
      <move select="Forward 2" hands="left" />
    </path>
  </tam>

  <tam title="Sides Reverse Rotate 1/2"
       from="Static Square"
       formation="Static Square"
       parts="2" group="  ">
    <path>
      <move select="Forward 2" hands="right" />
    </path>
    <path>
      <move select="Forward 2" hands="left" />
    </path>
    <path>
      <move select="Quarter Left" hands="right" beats="2" />
      <move select="Lead Right" hands="right" beats="3" scaleX="3.5" scaleY="3"/>
      <move select="Lead Right" hands="right" beats="4" scaleX="3.5" scaleY="4.5" />
    </path>
    <path>
      <move select="Lead Left" hands="left" beats="2" scaleY="2" />
      <move select="Lead Right" hands="left" beats="3" scaleX="2" scaleY="2"/>
      <move select="Lead Right" hands="left" beats="4" scaleX="2.5" scaleY="3" />
    </path>
  </tam>


  <tam title="Heads Single Rotate"
       from="Static Square"
       formation="Static Square" group="   " >
    <path numbers="1 8">
      <move select="Quarter Right" offsetY="-1" />
      <move select="Counter Rotate Left 4 2" offsetX="-1"/>
    </path>
    <path numbers="2 7">
      <move select="Quarter Right" offsetY="-1" />
      <move select="Counter Rotate Left 2 4" offsetX="-1"/>
    </path>
    <path numbers="5 4">
      <move select="Forward 2" hands="right" />
    </path>
    <path numbers="3 6">
      <move select="Forward 2" hands="left" />
    </path>
  </tam>

  <tam title="Sides Single Rotate"
       from="Static Square"
       formation="Static Square" group="   " >
    <path>
      <move select="Forward 2" hands="right" />
    </path>
    <path>
      <move select="Forward 2" hands="left" />
    </path>
    <path>
      <move select="Quarter Right" offsetY="-1" />
      <move select="Counter Rotate Left 4 2" offsetX="-1"/>
    </path>
    <path>
      <move select="Quarter Right" offsetY="-1" />
      <move select="Counter Rotate Left 2 4" offsetX="-1"/>
    </path>
  </tam>

  <tam title="Heads Single Rotate 1/2"
       from="Static Square"
       formation="Static Square" group="   " >
    <path>
      <move select="Quarter Right" offsetY="-1" />
      <move select="Counter Rotate Left 4 2" offsetX="-1"/>
      <move select="Counter Rotate Left 4 2" offsetY="-0.5"/>
    </path>
    <path>
      <move select="Quarter Right" offsetY="-1" />
      <move select="Counter Rotate Left 2 4" offsetX="-1"/>
      <move select="Counter Rotate Left 2 4" offsetY="0.5"/>
    </path>
    <path>
      <move select="Forward 2" offsetX="-.5" hands="right" />
    </path>
    <path>
      <move select="Forward 2" offsetX="-.5" hands="left" />
    </path>
  </tam>

  <tam title="Sides Single Rotate 1/2"
       from="Static Square"
       formation="Static Square" group="   " >
    <path>
      <move select="Forward 2" offsetX="-.5" hands="right" />
    </path>
    <path>
      <move select="Forward 2" offsetX="-.5" hands="left" />
    </path>
    <path>
      <move select="Quarter Right" offsetY="-1" />
      <move select="Counter Rotate Left 4 2" offsetX="-1"/>
      <move select="Counter Rotate Left 4 2" offsetY="-0.5"/>
    </path>
    <path>
      <move select="Quarter Right" offsetY="-1" />
      <move select="Counter Rotate Left 2 4" offsetX="-1"/>
      <move select="Counter Rotate Left 2 4" offsetY="0.5"/>
    </path>
  </tam>


  <tam title="Heads Reverse Single Rotate"
       from="Static Square"
       formation="Static Square" group="    ">
    <path>
      <move select="Quarter Left" offsetY="1" />
      <move select="Counter Rotate Right 2 -4" offsetX="-1"/>
    </path>
    <path>
      <move select="Quarter Left" offsetY="1" />
      <move select="Counter Rotate Right 4 -2" offsetX="-1"/>
    </path>
    <path>
      <move select="Forward 2" hands="right" />
    </path>
    <path>
      <move select="Forward 2" hands="left" />
    </path>
  </tam>

  <tam title="Sides Reverse Single Rotate"
       from="Static Square"
       formation="Static Square" group="    ">
    <path>
      <move select="Forward 2" hands="right" />
    </path>
    <path>
      <move select="Forward 2" hands="left" />
    </path>
    <path>
      <move select="Quarter Left" offsetY="1" />
      <move select="Counter Rotate Right 2 -4" offsetX="-1"/>
    </path>
    <path>
      <move select="Quarter Left" offsetY="1" />
      <move select="Counter Rotate Right 4 -2" offsetX="-1"/>
    </path>
  </tam>

  <tam title="Heads Reverse Single Rotate 1/2"
       from="Static Square"
       formation="Static Square" group="    ">
    <path>
      <move select="Quarter Left" offsetY="1" />
      <move select="Counter Rotate Right 2 -4" offsetX="-1"/>
      <move select="Counter Rotate Right 2 -4" offsetY="-0.5"/>
    </path>
    <path>
      <move select="Quarter Left" offsetY="1" />
      <move select="Counter Rotate Right 4 -2" offsetX="-1"/>
      <move select="Counter Rotate Right 4 -2" offsetY="0.5"/>
    </path>
    <path>
      <move select="Forward 2" offsetX="-.5" hands="right" />
    </path>
    <path>
      <move select="Forward 2" offsetX="-.5" hands="right" />
    </path>
  </tam>

  <tam title="Sides Reverse Single Rotate 1/2"
       from="Static Square"
       formation="Static Square" group="    ">
    <path>
      <move select="Forward 2" offsetX="-.5" hands="right" />
    </path>
    <path>
      <move select="Forward 2" offsetX="-.5" hands="right" />
    </path>
    <path>
      <move select="Quarter Left" offsetY="1" />
      <move select="Counter Rotate Right 2 -4" offsetX="-1"/>
      <move select="Counter Rotate Right 2 -4" offsetY="-0.5"/>
    </path>
    <path>
      <move select="Quarter Left" offsetY="1" />
      <move select="Counter Rotate Right 4 -2" offsetX="-1"/>
      <move select="Counter Rotate Right 4 -2" offsetY="0.5"/>
    </path>
  </tam>

</tamination>
