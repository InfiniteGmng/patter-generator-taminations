<!DOCTYPE tamination SYSTEM "../src/tamination.dtd">
<tamination title="Interlocked Extend">

  <tam title="Interlocked Extend" from="Right-Hand Quarter Line"
       formation="Quarter Lines RH">
    <path>
      <move select="Extend Left" beats="3" scaleY="2"/>
    </path>
    <path>
      <move select="Forward" beats="3"/>
    </path>
    <path>
      <move select="Extend Right" beats="3" scaleX="2" scaleY="2"/>
    </path>
    <path>
      <move select="Forward 2" beats="3"/>
    </path>
  </tam>

  <tam title="Interlocked Extend" from="Left-Hand Quarter Line"
       formation="Quarter Lines LH">
    <path>
      <move select="Forward" beats="3"/>
    </path>
    <path>
      <move select="Extend Right" beats="3" scaleY="2"/>
    </path>
    <path>
      <move select="Extend Left" beats="3" scaleX="2" scaleY="2"/>
    </path>
    <path>
      <move select="Forward 2" beats="3"/>
    </path>
  </tam>

</tamination>
