<tamination title="Truck">

  <tam title="Truck" from="Columns" sequencer="gender-specific" formation="Column RH GBGB">
    <path>
      <move select="Dodge Right" hands="right"/>
    </path>
    <path>
      <move select="Dodge Left" hands="right"/>
    </path>
    <path>
      <move select="Dodge Right" hands="right"/>
    </path>
    <path>
      <move select="Dodge Left" hands="right"/>
    </path>
  </tam>

  <tam title="Truck" from="Waves" sequencer="gender-specific" formation="Ocean Waves RH BGBG">
	<path>
      <move select="Dodge Left" hands="right"/>
	</path>
	<path>
      <move select="Dodge Right" hands="both"/>
	</path>
	<path>
      <move select="Dodge Left" hands="both"/>
	</path>
	<path>
      <move select="Dodge Right" hands="right"/>
	</path>
  </tam>

  <tam title="Reverse Truck" from="Double Pass Thru, Girls in Center"
       sequencer="gender-specific">
    <formation>
      <dancer gender="boy" x="-3" y="1" angle="0"/>
      <dancer gender="girl" x="-1" y="1" angle="0"/>
      <dancer gender="boy" x="-3" y="-1" angle="0"/>
      <dancer gender="girl" x="-1" y="-1" angle="0"/>
    </formation>
    <path>
      <move select="Dodge Right" hands="right"/>
    </path>
    <path>
      <move select="Dodge Left" hands="right"/>
    </path>
    <path>
      <move select="Dodge Right" hands="left"/>
    </path>
    <path>
      <move select="Dodge Left" hands="left"/>
    </path>
  </tam>

</tamination>
