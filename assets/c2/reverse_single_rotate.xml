<tamination title="Reverse Single Rotate 1/4, 1/2, 3/4">

  <tam title="Reverse Single Rotate 1/4" from="Lines" formation="Normal Lines">
    <path>
      <move select="Quarter Left"/>
      <move select="Counter Rotate Right 0 -2" beats="3" offsetY="-2"/>
    </path>
    <path>
      <move select="Quarter Left"/>
      <move select="Counter Rotate Right 2 0" beats="3"/>
    </path>
    <path>
      <move select="Quarter Left"/>
      <move select="Counter Rotate Right 0 -2" beats="3" offsetY="-2"/>
    </path>
    <path>
      <move select="Quarter Left"/>
      <move select="Counter Rotate Right 2 0" beats="3"/>
    </path>
  </tam>

  <tam title="Reverse Single Rotate 1/4" from="Waves" formation="Ocean Waves RH BGBG">
    <path>
      <move select="Quarter Left"/>
      <move select="Counter Rotate Right 0 -2" beats="3" offsetY="-2"/>
    </path>
    <path>
      <move select="Quarter Right"/>
      <move select="Counter Rotate Right 2 0" beats="3"/>
    </path>
    <path>
      <move select="Quarter Left"/>
      <move select="Counter Rotate Right 0 -2" beats="3" offsetY="-2"/>
    </path>
    <path>
      <move select="Quarter Right"/>
      <move select="Counter Rotate Right 2 0" beats="3"/>
    </path>
  </tam>

</tamination>
